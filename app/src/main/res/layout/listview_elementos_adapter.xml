<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nombre_elemento"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/kionaregular"
        android:text="Nombre"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagen_elementos_lista"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_elemento_desc"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/kionaregular"
        android:text="Descripcion"
        android:textSize="7sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagen_elementos_lista"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_elemento" />

    <TextView
        android:id="@+id/tv_elemento_precio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/kionaregular"
        android:text="Precio"
        android:textSize="7sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagen_elementos_lista"
        app:layout_constraintTop_toBottomOf="@+id/tv_elemento_desc" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_elementos_lista"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>